<?xml version="1.0" encoding="utf-8"?>
<odoo>
  
        <!-- trees -->


    <record id="view_product_final_tree" model="ir.ui.view">
        <field name="name">Final Product</field>
        <field name="model">product.final</field>
        <field name="arch" type="xml">          
            <tree default_order='code'>              
               <field name="code"/>
               <field name="name"/>              
            </tree>          
        </field>
    </record>

    <record id="view_cutting_unication_product_tree" model="ir.ui.view">
        <field name="name">Cutting Ubications Products</field>
        <field name="model">cutting.ubication</field>
        <field name="arch" type="xml">          
            <tree>              
               <field name="cutting.ubication"/>
               <field name="position"/>
               <field name="name"/>              
            </tree>          
        </field>
    </record>

        <!-- forms -->


    <record id="view_product_final_form" model="ir.ui.view">
        <field name="name">Final Product</field>
        <field name="model">product.final</field>
        <field name="arch" type="xml">         
          <form>
            <sheet>
              <group>
               <field name="code"/>
               <field name="name"/>
              </group>
            </sheet>
          </form>          
        </field>
    </record>

    <record id="view_cutting_ubication_product_form" model="ir.ui.view">
        <field name="name">Cutting Ubication Product</field>
        <field name="model">cutting.ubication</field>
        <field name="arch" type="xml">         
          <form>
            <sheet>
              <group>
               <field name=" product_final_id"/>
               <field name="position"/>
               <field name="name"/>
              </group>
            </sheet>
          </form>          
        </field>
    </record>


      <!-- notebook pages -->
        
    <record model="ir.ui.view" id="cutting_ubication_form_page_view">
      <field name="name">Cutting Ubications</field>
      <field name="model">utting.ubication</field>      
      <field name="arch" type="xml">        
          <page name="general_information" position="after">
            <page name="cutting_ubication_form_page"
                  string="Cutting Ubications">
                  <group>
                    <field name="product_final_id"/>
                    <field name="position"/>                    
                  </group>
            </page>
          </page>        
      </field>
    </record>  

    <!-- actions opening views on model -->

    <record model="ir.actions.act_window" id="product_final_action_window">
      <field name="name">Final Product</field>
      <field name="res_model">product.final</field>
      <field name="view_mode">tree,form</field>
    </record>  

    <record model="ir.actions.act_window" id="cutting_ubication_product_action_window">
      <field name="name">Cutting Ubication Product</field>
      <field name="res_model">cutting.ubication</field>
      <field name="view_mode">tree,form</field>
    </record>  


    <!-- menus -->

    <menuitem id="product_final_menu" name="Final Product"
        parent="stock.menu_product_in_config_stock"       
        action="product_final_action_window"/>

    <menuitem id="cutting_ubication_product_menu" name="Cutting Ubication Products"
        parent="sale.product_menu_catalog"       
        action="cutting_ubication_product_action_window"/>


</odoo>